<?xml version="1.0" encoding="UTF-8"?>
<Config>
	<Device>
		<Name>BPepb</Name>
		<Order>0</Order>

		<!-- Количество линий управления ЭПТ -->
		<LinesNum>2</LinesNum>

		<!-- Признак использования рукава на локомотиве: 0 - вагон, 1 - локомотив -->
