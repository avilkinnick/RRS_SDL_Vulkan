		<IsHoseAtLoco>0</IsHoseAtLoco>

		<!-- Коэффициент громкости озвучки к потоку опорожнения магистрали через рукав -->
		<K_sound>1.5</K_sound>

		<!-- Длина рукава -->
		<Length>0.71</Length>
	</Device>
</Config>